{
  "name": "@madre/client",
  "packageManager": "yarn@3.6.3",
  "workspaces": [
    "packages/*",
    "apps/*"
  ],
  "scripts": {
    "sdk": "yarn dlx @yarnpkg/sdks vscode",
    "upgrade": "yarn upgrade-interactive",
    "list": "yarn workspaces list",
    "zeroinstall": "yarn install --immutable --immutable-cache",
    "@madre/ui": "yarn workspace @madre/ui",
    "@madre/react": "yarn workspace @madre/react",
    "@madre/util": "yarn workspace @madre/util",
    "test:all": "yarn workspace @madre/react test",
    "start:ui": "yarn workspace @madre/ui storybook"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^6.7.0",
    "@typescript-eslint/parser": "^6.7.0",
    "eslint": "^8.49.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-simple-import-sort": "^10.0.0",
    "jsdom": "22.1.0",
    "prettier": "^3.0.3",
    "typescript": "5.2.2"
  },
  "resolutions": {
    "typescript": "5.2.2",
    "jsdom": "22.1.0"
  }
}
